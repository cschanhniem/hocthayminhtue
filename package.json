{
  "name": "buddhist-concepts",
  "version": "1.0.0",
  "description": "Buddhist concepts from Nikaya with tree navigation",
  "scripts": {
    "start": "npm run clean && npm run build:css && concurrently \"eleventy --serve\" \"tailwindcss -i ./src/css/tailwind.css -o ./_site/css/style.css --watch\"",
    "build": "npm run clean && tailwindcss -i ./src/css/tailwind.css -o ./_site/css/style.css --minify && eleventy",
    "build:css": "tailwindcss -i ./src/css/tailwind.css -o ./_site/css/style.css --minify",
    "clean": "rm -rf _site"
  },
  "keywords": [
    "buddhism",
    "nikaya",
    "concepts",
    "11ty",
    "tailwindcss"
  ],
  "dependencies": {
    "@11ty/eleventy": "^2.0.1",
    "@tailwindcss/typography": "^0.5.10",
    "autoprefixer": "^10.4.19",
    "markdown-it": "^14.1.0",
    "postcss": "^8.4.38",
    "tailwindcss": "^3.4.1"
  },
  "devDependencies": {
    "concurrently": "^9.1.2"
  }
}
