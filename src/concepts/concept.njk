---
layout: layouts/base.njk
pagination:
  data: concepts.root.children
  size: 1
  alias: concept
permalink: "concepts/{{ concept.id }}/"
---

{% if concept.id %}
  {% set content_file = "../content/" + concept.id + ".md" %}
  {% include content_file %}
{% else %}
  <h1>{{ concept.label }}</h1>
  <p>Nội dung đang được cập nhật...</p>
{% endif %}

{% if concept.children and concept.children.length > 0 %}
<h2 class="mt-8 mb-4">Các phần liên quan</h2>
<ul class="list-disc pl-5">
  {% for child in concept.children %}
    <li class="mb-2">
      <a href="/concepts/{{ child.id }}/" class="text-blue-600 hover:text-blue-800">
        {{ child.label }}
      </a>
    </li>
  {% endfor %}
</ul>
{% endif %}
