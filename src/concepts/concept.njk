---
layout: layouts/base.njk
pagination:
  data: concepts.root.children
  size: 1
  alias: concept
permalink: "concepts/{{ concept.id }}/"
---

<nav class="mb-6 text-sm text-gray-600">
  <a href="/" class="text-secondary hover:text-earth">Trang chủ</a> &gt; 
  <span>{{ concept.label }}</span>
</nav>

<article class="concept-content">
  <h1 class="text-3xl font-bold text-primary mb-6 pb-2 border-b-2 border-secondary">{{ concept.label }}</h1>
  
  {% if concept.id %}
    {% set content_file = "../content/" + concept.id + ".md" %}
    {% include content_file %}
  {% else %}
    <p class="text-gray-600">Nội dung đang được cập nhật...</p>
  {% endif %}
</article>

{% if concept.children and concept.children.length > 0 %}
<div class="glass-card mt-8">
  <h2 class="text-xl font-semibold text-primary mb-4">Các khái niệm liên quan</h2>
  <ul class="space-y-2">
    {% for child in concept.children %}
      <li>
        <a href="/concepts/{{ child.id }}/" class="nav-item">{{ child.label }}</a>
      </li>
    {% endfor %}
  </ul>
</div>
{% endif %}
