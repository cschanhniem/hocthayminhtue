---
layout: layouts/base.njk
pagination:
  data: concepts.root.children
  size: 1
  alias: concept
permalink: "concepts/{{ concept.id }}/"
---

<nav class="mb-6 text-sm text-gray-600 flex flex-wrap items-center">
  <a href="/" class="text-secondary hover:text-earth">Trang chủ</a> 
  <span class="mx-2">&gt;</span> 
  <span class="font-medium">{{ concept.label }}</span>
</nav>

<article class="concept-content">
  <h1 class="text-3xl font-bold text-primary mb-6 pb-2 border-b-2 border-secondary">{{ concept.label }}</h1>
  
  {% if concept.id %}
    {% set mdPath = "../content/" + concept.id + ".md" %}
    {% set mdContent %}{% include mdPath %}{% endset %}
    {% if mdContent %}
      <div class="prose prose-stone max-w-none">
        {{ mdContent | markdown | safe }}
      </div>
    {% else %}
      <p class="text-gray-600">Nội dung đang được cập nhật...</p>
    {% endif %}
  {% else %}
    <p class="text-gray-600">Nội dung đang được cập nhật...</p>
  {% endif %}
</article>
