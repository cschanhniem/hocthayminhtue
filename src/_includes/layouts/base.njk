<!DOCTYPE html>
<html lang="vi">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{{ title }} | Phật Pháp - Kinh Nikaya</title>
  <meta name="description" content="{{ description }}">

  <!-- Canonical URL -->
  <link rel="canonical" href="https://nikaya.org{{ page.url }}" />

  <!-- Favicon -->
  <link rel="icon" type="image/svg+xml" href="/images/logo.svg">

  <!-- Google Fonts -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;600;700&family=Inter:wght@400;500;600&family=EB+Garamond:ital@0;1&display=swap" rel="stylesheet">
  <meta name="google-site-verification" content="xUef8MtDHuxDLDKQMCrEziV4Q6EJycsAqixyPdcrwM0" />
  <!-- Tailwind CSS -->
  <script src="https://cdn.tailwindcss.com"></script>
  <script>
    tailwind.config = {
      theme: {
        extend: {
          colors: {
            primary: {
              DEFAULT: '#7d5a4f',
              light: '#9b735c',
              dark: '#5a3f36'
            },
            aurora: {
              blue: '#58B2DC',
              purple: '#A59ACA',
              pink: '#F5B2AC',
              green: '#A8D8B9'
            }
          },
          fontFamily: {
            montserrat: ['Montserrat', 'sans-serif'],
            inter: ['Inter', 'sans-serif'],
            garamond: ['EB Garamond', 'serif']
          }
        }
      }
    }
  </script>

  <!-- Custom CSS for mobile optimization -->
  <link rel="stylesheet" href="/css/mobile-fixes.css">

  <!-- Structured data for SEO -->
  <script type="application/ld+json">
  {
    "@context": "https://schema.org",
    "@type": "WebSite",
    "name": "Nikaya - Phật Pháp",
    "url": "https://nikaya.org",
    "description": "Trang web về giáo lý Phật giáo và Kinh Nikaya",
    "potentialAction": {
      "@type": "SearchAction",
      "target": "https://nikaya.org/search?q={search_term_string}",
      "query-input": "required name=search_term_string"
    }
  }
  </script>

  <style>
    :root {
      color-scheme: light;
    }

    body {
      font-family: 'Inter', system-ui, -apple-system, sans-serif;
      background: #f3e9dc;
      color: #7d5a4f;
    }

    /* Responsive Typography */
    html {
      font-size: 16px;
    }
    @media (min-width: 768px) {
      html {
        font-size: 18px;
      }
    }

    /* Link Styling */
    a {
      color: #7d5a4f;
      text-decoration: none;
      transition: all 0.2s;
    }
    a:hover {
      color: #9b735c;
    }

    /* Content Container */
    .container {
      padding-left: 1rem;
      padding-right: 1rem;
    }
    @media (min-width: 640px) {
      .container {
        padding-left: 2rem;
        padding-right: 2rem;
      }
    }

    /* Smooth Scrolling */
    html {
      scroll-behavior: smooth;
    }

    /* Focus Styles */
    *:focus {
      outline: 2px solid #58B2DC;
      outline-offset: 2px;
    }

    /* Print Styles */
    @media print {
      body {
        background: white;
      }
      .no-print {
        display: none;
      }
    }

    /* Glassmorphism Base Styles */
    .glass {
      background: rgba(255, 255, 255, 0.7);
      backdrop-filter: blur(10px);
      border: 1px solid rgba(255, 255, 255, 0.5);
    }

    /* Aurora Base Styles */
    .aurora {
      background: linear-gradient(135deg,
        rgba(243, 233, 220, 0.8) 0%,
        rgba(168, 216, 185, 0.2) 25%,
        rgba(165, 154, 202, 0.2) 50%,
        rgba(245, 178, 172, 0.2) 75%,
        rgba(243, 233, 220, 0.8) 100%
      );
      background-size: 400% 400%;
      animation: aurora 15s ease infinite;
    }

    @keyframes aurora {
      0% { background-position: 0% 50% }
      50% { background-position: 100% 50% }
      100% { background-position: 0% 50% }
    }

    /* Navigation Styles */
    .nav-link {
      position: relative;
      padding: 0.5rem 1rem;
      transition: all 0.2s;
    }
    .nav-link::after {
      content: '';
      position: absolute;
      bottom: 0;
      left: 50%;
      width: 0;
      height: 2px;
      background: #7d5a4f;
      transition: all 0.2s;
      transform: translateX(-50%);
    }
    .nav-link:hover::after {
      width: 100%;
    }
    .nav-link.active {
      color: #9b735c;
      font-weight: 500;
    }
    .nav-link.active::after {
      width: 100%;
    }
  </style>

  {% if extra_css %}
    {{ extra_css | safe }}
  {% endif %}
</head>
<body class="min-h-screen">
  <!-- Skip to content link for accessibility -->
  <a href="#main-content" class="sr-only focus:absolute focus:top-4 focus:left-4 focus:z-50 focus:px-4 focus:py-2 focus:bg-white focus:text-primary focus:shadow-lg focus:rounded">
    Đi đến nội dung chính
  </a>

  <!-- Navigation -->
  <nav class="glass sticky top-0 z-50" role="navigation" aria-label="Menu chính">
    <div class="container mx-auto px-4 py-4">
      <div class="flex items-center justify-between">
        <a href="/" class="flex items-center space-x-2" aria-label="Trang chủ Nikaya">
          <img src="/images/logo.svg" alt="Logo Nikaya" class="w-8 h-8">
          <span class="font-montserrat font-semibold text-lg">Nikaya</span>
        </a>
        <div class="hidden md:flex items-center space-x-6">
          <a href="/" class="nav-link {% if page.url === '/' %}active{% endif %}" aria-current="{% if page.url === '/' %}page{% endif %}">Trang Chủ</a>
          <a href="/content/thich-minh-tue" class="nav-link {% if page.url === '/thich-minh-tue/' %}active{% endif %}" aria-current="{% if page.url === '/thich-minh-tue/' %}page{% endif %}">Thầy Minh Tuệ</a>
          <a href="/content/about" class="nav-link {% if page.url === '/about/' %}active{% endif %}" aria-current="{% if page.url === '/about/' %}page{% endif %}">Về Chúng Tôi</a>
        </div>
        <!-- Mobile Menu Button -->
        <button class="md:hidden" id="mobile-menu-button" aria-expanded="false" aria-controls="mobile-menu" aria-label="Mở menu">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
          </svg>
        </button>
      </div>
      <!-- Mobile Menu -->
      <div class="md:hidden hidden" id="mobile-menu" role="menu" aria-labelledby="mobile-menu-button">
        <div class="px-2 pt-2 pb-3 space-y-1">
          <a href="/" class="block nav-link {% if page.url === '/' %}active{% endif %}" role="menuitem" aria-current="{% if page.url === '/' %}page{% endif %}">Trang Chủ</a>
          <a href="/content/thich-minh-tue" class="block nav-link {% if page.url === '/content/thich-minh-tue/' %}active{% endif %}" role="menuitem" aria-current="{% if page.url === '/content/thich-minh-tue/' %}page{% endif %}">Thích Minh Tuệ</a>
          <a href="/content/about" class="block nav-link {% if page.url === '/content/about/' %}active{% endif %}" role="menuitem" aria-current="{% if page.url === '/content/about/' %}page{% endif %}">Về Chúng Tôi</a>
        </div>
      </div>
    </div>
  </nav>

  <main id="main-content" tabindex="-1">
    {{ content | safe }}
  </main>

  <footer class="glass text-center py-4 mt-8 text-sm text-[#9b735c] no-print" role="contentinfo">
    <p>Phật Pháp - Kinh Nikaya</p>
    <p class="text-xs mt-2">© 2024 Nikaya.org - Trang web về giáo lý Phật giáo</p>
  </footer>

  <script>
    // Mobile menu toggle with accessibility improvements
    const mobileMenuButton = document.getElementById('mobile-menu-button');
    const mobileMenu = document.getElementById('mobile-menu');

    mobileMenuButton.addEventListener('click', () => {
      const isExpanded = mobileMenuButton.getAttribute('aria-expanded') === 'true';
      mobileMenuButton.setAttribute('aria-expanded', !isExpanded);
      mobileMenu.classList.toggle('hidden');

      // Change button text for screen readers
      mobileMenuButton.setAttribute('aria-label', isExpanded ? 'Mở menu' : 'Đóng menu');
    });

    // Close mobile menu when pressing Escape key
    document.addEventListener('keydown', (event) => {
      if (event.key === 'Escape' && mobileMenuButton.getAttribute('aria-expanded') === 'true') {
        mobileMenuButton.click();
      }
    });
  </script>

  {% if extra_js %}
    {{ extra_js | safe }}
  {% endif %}
</body>
</html>
