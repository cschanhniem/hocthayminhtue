<style>
    /* Additional styles specific to mindmap pages */
    .mindmap-container {
        padding: 1rem;
    }

    .mindmap-header {
        text-align: center;
        margin-bottom: 2rem;
    }

    .mindmap-sections {
        max-width: 1200px;
        margin: 0 auto;
    }

    .section-cards {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
        gap: 1.5rem;
    }

    .concept-card {
        background: rgba(255, 255, 255, 0.7);
        backdrop-filter: blur(10px);
        border-radius: 12px;
        border: 1px solid rgba(255, 255, 255, 0.5);
        padding: 1.5rem;
        transition: all 0.3s ease;
    }

    .concept-card:hover {
        transform: translateY(-3px);
        box-shadow: 0 8px 24px rgba(125, 90, 79, 0.12);
    }

    .section-link {
        text-decoration: none;
        display: block;
        position: relative;
    }

    .section-link:hover {
        transform: translateX(10px);
    }

    .card-arrow {
        position: absolute;
        right: 1.5rem;
        top: 50%;
        transform: translateY(-50%);
        font-size: 2rem;
        color: #9b735c;
        opacity: 0;
        transition: all 0.3s ease;
    }

    .section-link:hover .card-arrow {
        opacity: 1;
        right: 1rem;
    }

    /* Hierarchical structure styles */
    .concept-card ul {
        margin-top: 0.5rem;
        margin-bottom: 0.5rem;
    }

    .concept-card li {
        margin-bottom: 0.25rem;
        position: relative;
    }

    .concept-card ul ul {
        margin-left: 1.5rem;
        margin-top: 0.25rem;
        margin-bottom: 0.5rem;
        border-left: 1px dashed rgba(125, 90, 79, 0.3);
        padding-left: 0.75rem;
    }

    .concept-card ul ul li {
        font-size: 0.9rem;
        color: #9b735c;
    }

    .concept-card ul ul li::before {
        content: '◦';
        position: absolute;
        left: -1rem;
        color: #9b735c;
    }

    .concept-card a {
        color: #7d5a4f;
        font-weight: 500;
        text-decoration: none;
        transition: all 0.2s;
    }

    .concept-card a:hover {
        color: #58B2DC;
        text-decoration: underline;
    }

    /* Parent concept styling */
    .concept-card h3 {
        color: #5a3f36;
        border-bottom: 1px solid rgba(125, 90, 79, 0.2);
        padding-bottom: 0.5rem;
        margin-bottom: 0.75rem;
    }

    /* Child concept styling */
    .concept-card > ul > li {
        font-weight: 500;
        margin-bottom: 0.75rem;
    }

    /* Grandchild concept styling */
    .concept-card > ul > li > ul > li {
        font-weight: normal;
        font-size: 0.9rem;
        margin-bottom: 0.25rem;
    }
</style>
